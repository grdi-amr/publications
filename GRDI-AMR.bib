@article{shayExploitingTargetedResistome2023,
  title = {Exploiting a Targeted Resistome Sequencing Approach in Assessing Antimicrobial Resistance in Retail Foods},
  author = {Shay, Julie A. and Haniford, Laura S. E. and Cooper, Ashley and Carrillo, Catherine D. and Blais, Burton W. and Lau, Calvin Ho-Fung},
