  author = {Xu, Qi and Si, Wei and Mba, Ogan Iheanacho and Sienkiewicz, Olimpia and Ngadi, Michael and Ross, Kelly and Kithama, Munene and Kiarie, Elijah G. and Kennes, Yan-Martel and Diarra, Moussa S. and Zhao, Xin},
