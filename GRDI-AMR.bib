@article{brownResponsesSoilBacterial2022,
  title = {Responses of the {{Soil Bacterial Community}}, {{Resistome}}, and {{Mobilome}} to a {{Decade}} of {{Annual Exposure}} to {{Macrolide Antibiotics}}},
  author = {Brown, Liam P. and Murray, Roger and Scott, Andrew and Tien, Yuan-Ching and Lau, Calvin Ho-Fung and Tai, Vera and Topp, Edward},
  editor = {Elkins, Christopher A.},
  year = {2022},
  month = apr,
  journal = {Applied and Environmental Microbiology},
  volume = {88},
