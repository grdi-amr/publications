@article{zhangOmicsbasedFrameworkAssessing2021,
  title = {An Omics-Based Framework for Assessing the Health Risk of Antimicrobial Resistance Genes},
  author = {Zhang, An-Ni and Gaston, Jeffry M. and Dai, Chengzhen L. and Zhao, Shijie and Poyet, Mathilde and Groussin, Mathieu and Yin, Xiaole and Li, Li-Guan and Van Loosdrecht, Mark C. M. and Topp, Edward and Gillings, Michael R. and Hanage, William P. and Tiedje, James M. and Moniz, Katya and Alm, Eric J. and Zhang, Tong},
