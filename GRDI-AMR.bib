@article{boydIdentificationNovelMetallovlactamase2019,
  title = {Identification of a Novel Metallo-{$\beta$}-Lactamase, {{CAM-1}}, in Clinical {{Pseudomonas}} Aeruginosa Isolates from {{Canada}}},
  author = {Boyd, David A and Lisboa, Luiz F and Rennie, Robert and Zhanel, George G and Dingle, Tanis C and Mulvey, Michael R},
  year = {2019},
