  langid = {english},
  keywords = {grdi-amr-1,official-index,open-access},
  file = {C:\Users\chapm\refmgr\zot_primary\storage\C3XNEYUK\Carson et al. - 2019 - Ceftiofur-resistant Salmonella enterica ser.pdf}
