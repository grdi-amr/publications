@article{yangVirulencePotentialAntimicrobialresistant2023,
  title = {Virulence Potential of Antimicrobial-Resistant Extraintestinal Pathogenic {{Escherichia}} Coli from Retail Poultry Meat in a {{Caenorhabditis}} Elegans Model},
  author = {Yang, Chongwu and Diarra, Moussa S. and Attiq Rehman, Muhammad and Li, Linyan and Yu, Hai and Yin, Xianhua and Aslam, Mueen and Carrillo, Catherine D. and Yang, Chengbo and Gong, Joshua},
  year = {2023},
