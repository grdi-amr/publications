@article{flintChoiceDNAExtraction2022,
  title = {Choice of {{DNA}} Extraction Method Affects Detection of Bacterial Taxa from Retail Chicken Breast},
  author = {Flint, Annika and Laidlaw, Anna and Li, Leo and Raitt, Courtney and Rao, Mary and Cooper, Ashley and Weedmark, Kelly and Carrillo, Catherine and Tamber, Sandeep},
