@article{venkatesanMolecularMechanismPlasmidborne2023,
  title = {Molecular Mechanism of Plasmid-Borne Resistance to Sulfonamide Antibiotics},
  author = {Venkatesan, Meenakshi and Fruci, Michael and Verellen, Lou Ann and Skarina, Tatiana and Mesa, Nathalie and Flick, Robert and Pham, Chester and Mahadevan, Radhakrishnan and Stogios, Peter J. and Savchenko, Alexei},
