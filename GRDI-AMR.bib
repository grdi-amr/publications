@article{tymensenPlasmidDistributionEscherichia2019,
  title = {Plasmid {{Distribution}} among {{{\emph{Escherichia}}}}{\emph{ Coli}} from {{Livestock}} and {{Associated Wastewater}}: {{Unraveling Factors That Shape}} the {{Presence}} of {{Genes Conferring Third-Generation Cephalosporin Resistance}}},
  shorttitle = {Plasmid {{Distribution}} among {{{\emph{Escherichia}}}}{\emph{ Coli}} from {{Livestock}} and {{Associated Wastewater}}},
  author = {Tymensen, Lisa and Booker, Calvin W. and Hannon, Sherry J. and Cook, Shaun R. and Jokinen, Cassandra C. and Zaheer, Rahat and Read, Ron and Boerlin, Patrick and McAllister, Tim A.},
