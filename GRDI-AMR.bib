@article{yangEffectsEncapsulatedCinnamaldehyde2021,
  title = {Effects of Encapsulated Cinnamaldehyde on Growth Performance, Intestinal Digestive and Absorptive Functions, Meat Quality and Gut Microbiota in Broiler Chickens},
  author = {Yang, Chongwu and Diarra, Moussa S and Choi, Janghan and {Rodas-Gonzalez}, Argenis and Lepp, Dion and Liu, Shangxi and Lu, Peng and Mogire, Marion and Gong, Joshua and Wang, Qi and Yang, Chengbo},
